.tagListEditable {
    cursor: text;   
}

.tagPanel {
	
	
}

.tagList ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
}

.tagList li {
    display: inline-block;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    max-width: 100%;
    padding: 2px;
}

.tag {
     max-width: 100%;
     -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border: 1px solid #d9d9d9;
    background-color: #DB6619;
    white-space: nowrap;
    float:left;
    font-size: 10px;
}

.tagEditable {
    cursor: pointer;   
}

.tagCaption {
    max-width: 100%;
    padding: 2px 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    color:#ffffff;
    float:left;
}


.tagDelete {
    background-image: url(./images/delete-tag.png);
	cursor: pointer;
	height: 12px;
    width: 12px;
    float:left;
}

.tagEdit {
	background-image: url(./images/pencil.png);
    cursor: pointer;
    height: 12px;
    width: 12px;
    float:right;
}

.previewLeft {
    margin-left: -1px;
    border-left: 2px solid #4d90fe;
    padding-left: 2px
}

.previewRight {
    margin-right: -1px;
    border-right: 2px solid #4d90fe;
    padding-right: 2px
}
