<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client">

    <ui:with field="appearance"
             type="org.iplantc.de.commons.client.views.dialogs.AbstractFileUploadDialog.AbstractFileUploadDialogAppearance"/>

    <ui:with field="sideMargins"
             type="com.sencha.gxt.core.client.util.Margins">
        <ui:attributes top="4"
                       right="4"
                       bottom="4"
                       left="4"/>
    </ui:with>

    <ui:with field="centerMargins"
             type="com.sencha.gxt.core.client.util.Margins">
        <ui:attributes top="4"
                       right="0"
                       bottom="4"
                       left="0"/>
    </ui:with>

    <ui:with field="centerLayoutData"
             type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData">
        <ui:attributes width="1"
                       height="1"
                       margins="{centerMargins}"/>
    </ui:with>

    <ui:with field="sideLayoutData"
             type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData">
        <ui:attributes width="-1"
                       height=".60"
                       margins="{sideMargins}"/>
    </ui:with>

    <g:VerticalPanel ui:field="con">
        <con:HorizontalLayoutContainer>
            <con:child layoutData="{centerLayoutData}">
                <g:HTML ui:field="htmlDestText"/>
            </con:child>
        </con:HorizontalLayoutContainer>
        <!-- One -->
        <g:FormPanel ui:field="form0">
            <con:HorizontalLayoutContainer>
                <con:child layoutData="{sideLayoutData}">
                    <button:TextButton ui:field="btn0"
                                       toolTip="{appearance.reset}"
                                       icon="{appearance.arrowUndoIcon}"/>
                </con:child>
                <con:child layoutData="{centerLayoutData}">
                    <g:FileUpload ui:field="fuf0"
                                  name="file"/>
                </con:child>
                <con:child layoutData="{sideLayoutData}">
                    <gxt:Status ui:field="status0"/>
                </con:child>
            </con:HorizontalLayoutContainer>
        </g:FormPanel>

        <!-- Two -->
        <g:FormPanel ui:field="form1">
            <con:HorizontalLayoutContainer>
                <con:child layoutData="{sideLayoutData}">
                    <button:TextButton ui:field="btn1"
                                       toolTip="{appearance.reset}"
                                       icon="{appearance.arrowUndoIcon}"/>
                </con:child>
                <con:child layoutData="{centerLayoutData}">
                    <g:FileUpload ui:field="fuf1"
                                  name="file"/>
                </con:child>
                <con:child layoutData="{sideLayoutData}">
                    <gxt:Status ui:field="status1"/>
                </con:child>
            </con:HorizontalLayoutContainer>
        </g:FormPanel>

        <!-- Three -->
        <g:FormPanel ui:field="form2">
            <con:HorizontalLayoutContainer>
                <con:child layoutData="{sideLayoutData}">
                    <button:TextButton ui:field="btn2"
                                       toolTip="{appearance.reset}"
                                       icon="{appearance.arrowUndoIcon}"/>
                </con:child>
                <con:child layoutData="{centerLayoutData}">
                    <g:FileUpload ui:field="fuf2"
                                  name="file"/>
                </con:child>
                <con:child layoutData="{sideLayoutData}">
                    <gxt:Status ui:field="status2"/>
                </con:child>
            </con:HorizontalLayoutContainer>
        </g:FormPanel>

        <!-- Four -->
        <g:FormPanel ui:field="form3">
            <con:HorizontalLayoutContainer>
                <con:child layoutData="{sideLayoutData}">
                    <button:TextButton ui:field="btn3"
                                       toolTip="{appearance.reset}"
                                       icon="{appearance.arrowUndoIcon}"/>
                </con:child>
                <con:child layoutData="{centerLayoutData}">
                    <g:FileUpload ui:field="fuf3"
                                  name="file"/>
                </con:child>
                <con:child layoutData="{sideLayoutData}">
                    <gxt:Status ui:field="status3"/>
                </con:child>
            </con:HorizontalLayoutContainer>
        </g:FormPanel>

        <!-- Five -->
        <g:FormPanel ui:field="form4">
            <con:HorizontalLayoutContainer>
                <con:child layoutData="{sideLayoutData}">
                    <button:TextButton ui:field="btn4"
                                       toolTip="{appearance.reset}"
                                       icon="{appearance.arrowUndoIcon}"
                    />
                </con:child>
                <con:child layoutData="{centerLayoutData}">
                    <g:FileUpload ui:field="fuf4"
                                  name="file"/>
                </con:child>
                <con:child layoutData="{sideLayoutData}">
                    <gxt:Status ui:field="status4"/>
                </con:child>
            </con:HorizontalLayoutContainer>
        </g:FormPanel>

    </g:VerticalPanel>
</ui:UiBinder>

