/* Header Styles */
.header {
	gwt-sprite: "headerBg" ;	/* Edit these locations based on where you save images */
	background-color: #009bad;
	height: 39px;
	width: 100%;
	box-shadow: -1px 0px 4px 0px #777;
	background-size: contain;
}

.logo {
	gwt-sprite: "headerLogo";
	height: 30px;
	width: 30px;
	background-size: contain;
}
.logo_container {
	margin-left: 0px;
	display: inline-block;
}
.logo_container .logo {
	max-width: 100%;	/* Ensures that images scale down */
	max-height: 100%;
	height: 28px;
	margin: 5px;
	background-size: contain;
}
.logo_container a, #logo_container a:hover {
	text-decoration: none;
	border: none;
}
.logo_container span {
	color: #eee;
	font-size: 1.3em;
	font-weight: 1000;
	text-align: right;
	font-style: normal;
	display: inline-block;
	margin-top: 12px;
	vertical-align: top;
}
